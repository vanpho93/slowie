{
  "name": "slowie",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "dependencies": {
    "apollo-server": "^2.19.0",
    "graphql": "^15.4.0",
    "lodash": "^4.17.20",
    "mongoose": "^5.10.16",
    "nanoid": "^3.1.20",
    "tslint": "^6.1.3"
  },
  "scripts": {
    "start": "ts-node src/index.ts",
    "play": "ts-node src/play.ts",
    "dev": "nodemon --exec yarn start -e ts",
    "test": "DOTENV_CONFIG_PATH=test.env mocha 'src/**/*.test.ts' --recursive",
    "coverage-test": "DOTENV_CONFIG_PATH=test.env nyc yarn test",
    "report": "nyc report --reporter=text-lcov | coveralls",
    "tslint": "tslint --project tsconfig.json --config tslint.json"
  },
  "devDependencies": {
    "@types/chai": "^4.2.14",
    "@types/lodash": "^4.14.165",
    "@types/mocha": "^8.2.0",
    "@types/mongoose": "^5.10.1",
    "@types/sinon": "^9.0.10",
    "chai": "^4.3.0",
    "coveralls": "^3.1.0",
    "mocha": "^8.2.1",
    "nodemon": "^2.0.6",
    "nyc": "^15.1.0",
    "sinon": "^9.2.4",
    "ts-node": "^9.0.0",
    "typescript": "^4.1.2"
  },
  "nyc": {
    "include": [
      "src/**/*.ts"
    ],
    "extension": [
      ".ts"
    ],
    "require": [
      "ts-node/register"
    ],
    "reporter": [
      "text-summary",
      "html",
      "text",
      "text-lcov"
    ],
    "sourceMap": true,
    "instrument": true,
    "all": true,
    "check-coverage": true,
    "exclude": [
      "src/**/*.test.ts"
    ],
    "branches": 0,
    "lines": 0,
    "functions": 0,
    "statements": 0
  }
}
