{
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "pretty": true,
    "sourceMap": true,
    "target": "es2019",
    "outDir": "./dist",
    "baseUrl": "./src",
    "strictNullChecks": true,
    "skipLibCheck": true,
    "lib": ["es2019"],
    "typeRoots": [
      "./src/@types/",
      "./node_modules/@types/"
    ],
    "resolveJsonModule": true,
    "declaration": true
  },
  "include": [
    "src/**/*.ts",
    "src/config/*.json"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
